<div id="meta_box" class="box accordion form-horizontal">
    <div  id="meta_box__toggle" class="box-header toggle">
        <h3 class="box-title">meta設定<svg class="cb cb-angle-down icon_down"> <use xlink:href="#cb-angle-down" /></svg></h3>
    </div><!-- /.box-header -->
    <div id="meta_box__body" class="box-body accpanel">
        <div class="form-group">
            {{ form_label(form.author) }}
            <div class="col-sm-10">
                {{ form_widget(form.author) }}
            </div>
        </div>
        <div class="form-group">
            {{ form_label(form.description) }}
            <div class="col-sm-10">
                {{ form_widget(form.description) }}
            </div>
        </div>
        <div class="form-group">
            {{ form_label(form.keyword) }}
            <div class="col-sm-10">
                {{ form_widget(form.keyword) }}
            </div>
        </div>
        <div class="form-group">
            {{ form_label(form.meta_robots) }}
            <div class="col-sm-10">
                {{ form_widget(form.meta_robots) }}
            </div>
        </div>
        <div class="form-group">
            {{ form_label(form.meta_tags) }}
            <div class="col-sm-10">
                {{ form_widget(form.meta_tags, { attr : { placeholder : '複数のmetaタグを入力可能'}}) }}
            </div>
        </div>
    </div>
</div>