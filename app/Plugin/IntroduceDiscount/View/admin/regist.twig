{% extends 'default_frame.twig' %}

{% set menus = ['order', 'admin_affiliate'] %}

{% block title %}紹介割引管理{% endblock %}
{% block sub_title %}割引設定{% endblock %}

{% form_theme form 'Form/bootstrap_3_horizontal_layout.html.twig' %}

{% block javascript %}
<script src="//ajaxzip3.github.io/ajaxzip3.js" charset="UTF-8"></script>
<script>
$(function() {

});

</script>
{% endblock javascript %}

{% block main %}
<div class="row" id="aside_wrap">
    <form role="form" name="form1" id="form1" method="post" action="{{ url('admin_affiliate_commit') }}">
    <input type="hidden" name="mode" value="">
    {{ form_widget(form._token) }}
        <div class="col-md-9">
            <div class="box accordion">
                <div class="box-header toggle active">
                    <h3 class="box-title">割引情報<svg class="cb cb-angle-down icon_down"> <use xlink:href="#cb-angle-down" /></svg></h3>
                </div><!-- /.box-header -->
                <div class="box-body accpanel" style="display: block;">
                    <div class="order_list form-horizontal">
                        {# ID #}
                        <div class="form-group" style="display: none;">
                            {{ form_label(form.id) }}
                            <div class="col-sm-9 col-lg-2">
                                {{ form_widget(form.id) }}
                                {{ form_errors(form.id) }}
                            </div>
                        </div>
                        {# 紹介者への割引％ #}
                        <div class="form-group">
                            {{ form_label(form.introduce_conversion_discount_rate) }}
                            <div class="col-sm-9 col-lg-2">
                                {{ form_widget(form.introduce_conversion_discount_rate) }}
                                {{ form_errors(form.introduce_conversion_discount_rate) }}
                            </div>
                        </div>
                        {# 招待者への割引％ #}
                        <div class="form-group">
                            {{ form_label(form.meet_conversion_discount_rate) }}
                            <div class="col-sm-9 col-lg-2">
                                {{ form_widget(form.meet_conversion_discount_rate) }}
                                {{ form_errors(form.meet_conversion_discount_rate) }}
                            </div>
                        </div>
                    </div>
                </div><!-- /.box-body -->
            </div><!-- /.box -->
{#
            // ===================================
            // 操作部
            // ===================================
#}
            <div class="row hidden-xs hidden-sm">
                <div class="col-xs-10 col-xs-offset-1 col-sm-6 col-sm-offset-3 text-center btn_area">
                    <button class="btn btn-primary btn-block btn-lg" onclick="setModeAndSubmit('commit')">登録</button>
                </div>
            </div>
        </div><!-- /.col -->
    </form>
</div>
{% endblock %}
