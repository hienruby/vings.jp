{% extends 'default_frame.twig' %}

{% form_theme form 'Form/bootstrap_3_horizontal_layout.html.twig' %}

{% block title %}サイトマップ{% endblock %}
{% block sub_title %}設定{% endblock %}

{% block main %}
<form role="form" name="form1" id="form1" method="post" action="{{ url('sitemap_change') }}" >
    {{ form_widget(form._token) }}
    <div class="row" id="aside_wrap">
        <div class="col-md-9">
            <div class="box form-horizontal">
                <div class="box-body">
                    <div class="form-group">
                        {{ form_label(form.changefreq) }}
                        <div class="col-sm-9 col-lg-10">
                            {{ form_widget(form.changefreq) }}
                            {{ form_errors(form.changefreq) }}
                        </div>
                    </div>
                    <div class="form-group">
                        {{ form_label(form.priority) }}
                        <div class="col-sm-9 col-lg-10">
                            {{ form_widget(form.priority) }}
                            {{ form_errors(form.priority) }}
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-3">
            <div class="col_inner" id="aside_column">
                <div class="box no-header">
                    <div class="box-body">
                        <div class="row text-center">
                            <div class="col-sm-6 col-sm-offset-3 col-md-12 col-md-offset-0">
                                <button class="btn btn-primary btn-block btn-lg" onclick="document.form1.submit();">変更</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>
{% endblock main %}
