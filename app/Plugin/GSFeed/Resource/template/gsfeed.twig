<?xml version='1.0' encoding='utf-8'?>

<rss xmlns:g="http://base.google.com/ns/1.0" version="2.0">
    <channel>
        <title>{{ Info.shop_name }}</title>
        <link>{{ url('homepage') }}</link>
        <description>{{ Info.good_traded }}</description>
{% for Item in Items %}
        <item>
            <g:id>{{ Item.id }}</g:id>
            <title>{{ Item.title }}</title>
            <link>{{ Item.link }}</link>
            <description>{{ Item.description }}</description>
            <g:image_link>
                {{ Item.image_link }}
            </g:image_link>
            <g:price>{{ Item.price }} JPY</g:price>
            <g:condition>new</g:condition>
            <g:product_type>{{ Item.product_type }}</g:product_type>
            {% if Parameter.brand %}<g:brand>{{ Parameter.brand }}</g:brand>{% endif %}
            <g:identifier_exists>FALSE</g:identifier_exists>
            <g:mpn>{{ Item.mpn }}</g:mpn>
            <g:availability>{{ Item.availability }}</g:availability>
            {% if Parameter.gcategory %}<g:google_product_category>{{ Parameter.gcategory }}</g:google_product_category>{% endif %}
        </item>
{% endfor %}
    </channel>
</rss>
